<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="#FFC700">
            <TextView
                android:id="@+id/disaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disaster"
                android:textSize="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginTop="80dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/intensitymeter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="200sp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/low_intensity"/>
            <TextView
                android:id="@+id/intensity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intensity"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/disastericons"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="200dp"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="250dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="#FF8800">
            <TextView
                android:id="@+id/disastermedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disaster"
                android:textSize="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/locationmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginTop="80dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/intensitymetermedium"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="200sp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/medium_intensity"/>
            <TextView
                android:id="@+id/intensitymedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intensity"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/disastericonsmedium"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/timemedium"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="200dp"/>
            <TextView
                android:id="@+id/datemedium"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="250dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="#FF0000">
            <TextView
                android:id="@+id/disasterhigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disaster"
                android:textSize="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/locationhigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginTop="80dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/intensitymeterhigh"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="200sp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/intensityhigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intensity"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/disastericonshigh"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/timehigh"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="200dp"/>
            <TextView
                android:id="@+id/datehigh"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="250dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>